#!/usr/bin/env bash
# Example environment setup script. Copy to env.sh and edit before use.

SCRIPT_DIR="$(cd -- "$(dirname "$0")" >/dev/null 2>&1 && pwd)"
VENV_PATH="$SCRIPT_DIR/.venv"

if [ ! -d "$VENV_PATH" ]; then
  echo "Virtual environment not found at $VENV_PATH" >&2
  exit 1
fi

# shellcheck disable=SC1090
source "$VENV_PATH/bin/activate"

export OLLAMA_API_KEY="replace-with-your-ollama-key"
export DB_HOST="replace-with-db-host"
export DB_PORT="replace-with-db-port"
export DB_NAME="replace-with-db-name"
export DB_USER="replace-with-db-user"
export DB_PASSWORD="replace-with-db-password"

echo "Environment ready. Venv activated and environment variables exported."
